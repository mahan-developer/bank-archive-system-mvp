<Window x:Class="BankArchiveMVP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BankArchiveMVP - MVP Test"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ================= CUSTOMER ================= -->
        <GroupBox Header="Customer (MVP Test)" Grid.Column="0" Margin="10">
            <StackPanel Margin="10">

                <TextBlock Text="Customer No"/>
                <TextBox Margin="0,0,0,6"
                         Text="{Binding CustomerNo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="First Name"/>
                <TextBox Margin="0,0,0,6"
                         Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Last Name"/>
                <TextBox Margin="0,0,0,6"
                         Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="National ID"/>
                <TextBox Margin="0,0,0,10"
                         Text="{Binding NationalId, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Create Customer"
                        Command="{Binding CreateCustomerCommand}"
                        Margin="0,0,0,10"/>

                <Separator Margin="0,10,0,10"/>

                <TextBlock Text="Status"/>
                <TextBlock Text="{Binding CustomerStatusText}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </GroupBox>

        <!-- ================= CASE ================= -->
        <GroupBox Header="Case (MVP Test)" Grid.Column="1" Margin="10">
            <StackPanel Margin="10">

                <TextBlock Text="Case No"/>
                <TextBox Margin="0,0,0,6"
                         Text="{Binding CaseNo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Customer No (for Case)"/>
                <TextBox Margin="0,0,0,6"
                         Text="{Binding CaseCustomerNo, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Case Type"/>
                <ComboBox Margin="0,0,0,10"
                          ItemsSource="{Binding CaseTypes}"
                          SelectedItem="{Binding SelectedCaseType}" />

                <Button Content="Create Case"
                        Command="{Binding CreateCaseCommand}" />

                <Separator Margin="0,10,0,10"/>

                <TextBlock Text="Status"/>
                <TextBlock Text="{Binding CaseStatusText}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </GroupBox>

        <!-- ================= DOCUMENT ================= -->
        <GroupBox Header="Document (MVP Test)" Grid.Column="2" Margin="10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Placeholder / Future-ready tabs -->
                <TabControl Grid.Row="0" Margin="0,0,0,10">
                    <TabItem Header="Create">
                        <StackPanel Margin="10">

                            <TextBlock Text="Case No"/>
                            <TextBox Margin="0,0,0,6"
                     Text="{Binding DocumentCaseNo, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="File Name"/>
                            <TextBox Margin="0,0,0,6"
                     Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="File Path"/>
                            <TextBox Margin="0,0,0,6"
                     Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="File Hash"/>
                            <TextBox Margin="0,0,0,6"
                     Text="{Binding FileHash, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="Document Type"/>
                            <TextBox Margin="0,0,0,6"
                     Text="{Binding DocumentType, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock Text="Title (optional)"/>
                            <TextBox Margin="0,0,0,10"
                     Text="{Binding DocumentTitle, UpdateSourceTrigger=PropertyChanged}" />

                            <Button Content="Create Document"
                    Command="{Binding CreateDocumentCommand}"
                    Margin="0,0,0,10"/>

                            <TextBlock Text="{Binding DocumentStatusText}"
                       TextWrapping="Wrap"/>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Index/OCR">
                        <TextBlock Margin="10"
                   Text="Reserved for DocumentIndex + OCR pipeline."/>
                    </TabItem>
                </TabControl>


                <!-- Status placeholder (bind later) -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Status"/>
                    <TextBlock Text="{Binding DocumentStatusText}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
